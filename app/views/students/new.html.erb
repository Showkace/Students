<%= form_for :student, url: students_path do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :Name %>
  </p>

  <p>
    <%= f.label :Weight %><br>
    <%= f.text_field :Weight %>
  </p>

  <p>
    <%= f.label :Height %><br>
    <%= f.text_field :Height %>
  </p>

  <p>
    <%= f.label :colour %><br>
    <%= f.text_field :colour %>
  </p>

  <p>
    <%= f.label :GPA %><br>
    <%= f.text_field :GPA %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', students_path %>
